<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_task_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@android:color/transparent"
    android:padding="10dp"
    android:layout_marginBottom="4dp"
    android:descendantFocusability="blocksDescendants">

    <!-- Priority indicator bar (using ImageView since View is not allowed in widgets) -->
    <ImageView
        android:id="@+id/widget_task_priority_indicator"
        android:layout_width="4dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/widget_priority_indicator"
        android:contentDescription="@null" />

    <!-- Checkbox -->
    <ImageView
        android:id="@+id/widget_task_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_checkbox_unchecked"
        android:contentDescription="@string/task_checkbox" />

    <!-- Task content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_task_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B3FFFFFF"
            android:textSize="10sp"
            android:maxLines="1"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
