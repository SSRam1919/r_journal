<?xml version="1.0" encoding="utf-8"?>
<!-- Widget background with rounded corners and dark theme -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Dark gradient background -->
    <gradient
        android:type="linear"
        android:startColor="#1A1A1A"
        android:endColor="#0D0D0D"
        android:angle="135" />
    
    <!-- Rounded corners -->
    <corners android:radius="16dp" />
    
    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#2A2A2A" />
        
</shape>
